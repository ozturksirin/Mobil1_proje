<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_screen">


    <Button
        android:id="@+id/btn_atla"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/buttons_color"
        android:text="atla"
        android:textColor="@color/cardview_dark_background"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bilgi" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="257dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="52dp"
        android:contentDescription="girisLogo"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/bilgi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bilgi"
        android:layout_width="259dp"
        android:layout_height="75dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="72dp"
        android:text="Aradığın tüm ustalar burada\nyolda mı kaldın tek tıkla \nustan yanında."
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>